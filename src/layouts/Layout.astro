---
import Github from "../components/icons/Github.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Major+Mono+Display&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap");
      body {
        font-family: "JetBrains Mono", monospace;
        font-weight: 400;
        font-style: normal;
      }
    </style>
  </head>
  <body class="bg-slate-100 dark:bg-slate-950">
    <div class="fixed -z-10">
      <div
        class="absolute inset-0 -z-10 h-screen w-screen items-center px-5 py-24 [background:radial-gradient(80%_120%_at_50%_50%,rgba(0,0,0,0)_50%,#00012b85_70%,#020006_100%)]"
      >
      </div>
    </div>
    <div
      class="flex flex-col mx-auto max-w-[1100px] h-screen w-screen text-slate-800 dark:text-slate-200"
    >
      <header class="mt-5 px-7 flex justify-between items-center">
        <h1
          class="relative text-4xl font-extrabold bg-gradient-to-r from-sky-400 via-indigo-500 to-violet-500 bg-clip-text text-transparent"
        >
          <a href="/">rjpm.ui</a>
        </h1>
        <span
          ><a
            href="https://github.com/ricardojparram/rjpm-ui-components"
            target="_blank"
            rel="noopener noreferrer"><Github class="w-7 h-7 text-white" /></a
          ></span
        >
      </header>
      <slot />
      <footer class="p-2 mt-auto text-center text-gray-400">
        Made by <a
          href="https://github.com/ricardojparram"
          target="_blank"
          class="bg-gradient-to-tr font-bold from-sky-400 to-violet-400 bg-clip-text text-transparent hover:bg-gradient-to-tl"
          >@ricardojparram</a
        > - 2024
      </footer>
    </div>
  </body>
</html>
